* {
  padding: 0;
  margin: 0;
}
li {
  list-style: none;
}
body {
  font-family: sans-serif;
  color: #333;
  box-sizing: border-box;
}
h1 {
  font-weight: normal;
  font-size: 24px;
  margin-bottom: 20px;
}
h2 {
  margin-bottom: 15px;
  font-size: 14px;
  text-transform: uppercase;
}
.container {
  margin: 15px;
}

.content {
  display: flex;
  justify-content: center;
}

input {
  height: row-height;
  width: 100%;
  padding-left: 10px;
  padding-right: 10px;
  form-item();
  outline: 0;
}

button {
  border: none;
  background: none;
  outline: 0;
  cursor: pointer;
}

.big-action-button {
  width: 100%;
  border: none;
  height: 30px;
  background: guild.action;
  text-align: center;
  color: #fff;
  font-size: 12px;
  text-transform: uppercase;
  margin-top: 5px;
  cursor: pointer;
  border-radius: 2px;
}

.action-button {
  color: guild.action;
  font-weight: bold;
  height: 30px;
  line-height: @height;
  padding: 0 20px;
  border: 1px solid #ddd;
  cursor: pointer;
  border-radius: 2px;
}
