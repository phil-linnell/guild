* {
  padding: 0;
  margin: 0;
}
li {
  list-style: none;
}
body {
  font-family: sans-serif;
  padding: 40px 30px;
  color: #333;
}
h2 {
  font-size: 24px;
  font-weight: normal;
}
h3 {
  margin-bottom: 15px;
  font-size: 14px;
  text-transform: uppercase;
}
.row {
  padding: 20px;
  background: #f6f6f6;
  margin-bottom: 10px;
}
.content {
  display: flex;
  width: 100%;
}

.col {
  padding: 0 10px;
  flex: 1;
}
